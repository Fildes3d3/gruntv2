<aside id="categories-2" class="widget widget_categories">
    <h2 class="widget-title">Categories</h2>
    <label class="screen-reader-text" for="cat">Categories</label>

    <select  name='cat' id='cat' class='postform' >

        <option value='-1'>Select Category</option>
        {% for categories in categories|sortbyfield('name') %}
        <option class="level-0" value="{{ path('category_archives', { category_name: categories.name}) }}">{{ categories.name }}</option>
        {% endfor %}
    </select>

    <script type='text/javascript'>
        /* <![CDATA[ */
        (function() {
            var dropdown = document.getElementById( "cat" );
            function onCatChange() {
                if ( dropdown.options[ dropdown.selectedIndex ].value != 0 ) {
                    location.href = "" + dropdown.options[ dropdown.selectedIndex ].value;
                }
            }
            dropdown.onchange = onCatChange;
        })();
        /* ]]> */
    </script>

</aside>